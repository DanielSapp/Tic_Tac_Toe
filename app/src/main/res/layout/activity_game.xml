<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/GameTextDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="33dp"
        android:text="@string/GameTextViewStartingText"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:contentDescription="@string/TicTacToeImageDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tictactoeboard" />

    <Button
        android:id="@+id/UMButton"
        style="@style/BoardButton"
        android:layout_width="114dp"
        android:layout_height="124dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="216dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/URButton"
        style="@style/BoardButton"
        android:layout_width="114dp"
        android:layout_height="112dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="220dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MMButton"
        style="@style/BoardButton"
        android:layout_width="125dp"
        android:layout_height="120dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="356dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MRButton"
        style="@style/BoardButton"
        android:layout_width="131dp"
        android:layout_height="127dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="356dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MLButton"
        style="@style/BoardButton"
        android:layout_width="132dp"
        android:layout_height="127dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="356dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BLButton"
        style="@style/BoardButton"
        android:layout_width="132dp"
        android:layout_height="137dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="488dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BMButton"
        style="@style/BoardButton"
        android:layout_width="130dp"
        android:layout_height="133dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="488dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BRButton"
        style="@style/BoardButton"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="488dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GameRestartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="124dp"
        android:onClick="restartGame"
        android:text="@string/GameRestartButtonText"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ULButton"
        style="@style/BoardButton"
        android:layout_width="120dp"
        android:layout_height="123dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="220dp"
        android:background="@color/white"
        android:onClick="onBoardMove"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>